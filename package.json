{
  "name": "svelte-maplibre",
  "version": "0.1.5",
  "description": "Svelte bindings for MapLibre",
  "author": {
    "name": "Daniel Imfeld",
    "url": "https://imfeld.dev"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dimfeld/svelte-maplibre.git"
  },
  "homepage": "https://svelte-maplibre.imfeld.dev",
  "license": "MIT",
  "keywords": [
    "gis",
    "map",
    "maplibre",
    "svelte"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "d3-geo": "^3.1.0",
    "just-compare": "^2.3.0",
    "just-flush": "^2.3.0",
    "maplibre-gl": "3.0.0-pre.4"
  },
  "peerDependencies": {
    "@deck.gl/core": "^8.8.0",
    "@deck.gl/layers": "^8.8.0",
    "@deck.gl/mapbox": "^8.8.0",
    "svelte": "^3.54.0"
  },
  "devDependencies": {
    "@deck.gl/core": "^8.8.0",
    "@deck.gl/layers": "^8.8.0",
    "@deck.gl/mapbox": "^8.8.0",
    "@playwright/test": "^1.28.1",
    "@skeletonlabs/skeleton": "^0.124.2",
    "@sveltejs/adapter-vercel": "^2.0.4",
    "@sveltejs/kit": "^1.5.0",
    "@sveltejs/package": "^2.0.0",
    "@types/d3-color": "^3.1.0",
    "@types/d3-geo": "^3.0.3",
    "@types/geojson": "^7946.0.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.7",
    "d3-color": "^3.1.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "highlight.js": "^11.7.0",
    "highlightjs-svelte": "^1.0.6",
    "postcss": "^8.4.14",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "publint": "^0.1.9",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "tailwindcss": "^3.2.7",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vitest": "^0.25.3"
  },
  "peerDependenciesMeta": {
    "@deck.gl/core": {
      "optional": true
    },
    "@deck.gl/layers": {
      "optional": true
    },
    "@deck.gl/mapbox": {
      "optional": true
    }
  }
}
